    <select id="userSelectMenu"
            parameterType="com.koreait.restaurant.Dto.SelectMenuDto"
            resultType="com.koreait.restaurant.entity.SelectMenuEntity">
        select
        code as menuCode,
        name as menuName,
        day,
        meals,
        age1 as adultPrice,
        age2 as childPrice
        from
        admin_menu

        where
        day = #{day}
        and meals = #{meals}
    </select>
